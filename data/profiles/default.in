[global]
toplevels=['toplevel1']
is-dark=false
is-custom=false
logout-command='openbox --exit'
shutdown-command='systemctl shutdown -h now'

[toplevel1]
strut=true
monitor=-1
background-type='image'
edge='top'
height=26
icon-size=24
auto-hide=false
enable-font-color=true
font-color='rgb(255,255,255)'
background-file='@DATADIR_INSTALL@/images/background.png'
applets=['sep1','menu','launcher','sep2','wcm','sep3','pgr','sep4','tlist','cpu','xembed','clock']


[sep1]
plugin-type='separator'
size=2
position=0
show-separator=false

[menu]
plugin-type='menumodel'
position=1
icon-name='start-here-symbolic'
menu-name=nothing
is-internal-menu=true
is-system-menu=true
is-menu-bar=false

[launcher]
plugin-type='launchbar'
launch-buttons=['pcmanfm.desktop', 'gnome-terminal.desktop', 'firefox.desktop']
position=2

[sep2]
plugin-type='separator'
size=4
show-separator=false
position=3

[wcm]
plugin-type='wincmd'
position=4
left-button-command='iconify'
middle-button-command='shade'
image='gnome-window-manager'
toggle-iconify-and-shade=true

[sep3]
plugin-type='separator'
show-separator=false
size=4
position=5

[pgr]
plugin-type='pager'
position=6

[sep4]
plugin-type='separator'
size=4
position=7

[tlist]
plugin-type='tasklist'
is-expanded=true
position=8
grouped-tasks=true
all-desktops=false

[cpu]
plugin-type='cpu'
position=9

[xembed]
plugin-type='xembed'
position=10

[clock]
plugin-type='clock'
clock-format='%R'
tooltip-format='%A %x'
bold-font=false
position=11

